@model LIMS.Application.Commands.Laboratory.CreateLaboratoryCommand

@{
    ViewData["Title"] = "Add New Laboratory";
}

<h2>@ViewData["Title"]</h2>
<hr />

<!-- Form to Create a New Laboratory -->
<form asp-action="CreateLab" method="post">
    <div class="form-group">
        <label for="Name">Id</label>
        <input type="text" class="form-control" id="Id" name="Id" required />
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
        <label for="Location">Location</label>
        <input type="text" class="form-control" id="Location" name="Location" required />
        <label for="ContactNumber">ContactNumber</label>
        <input type="text" class="form-control" id="ContactNumber" name="ContactNumber" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Laboratory</button>
</form>

<hr />