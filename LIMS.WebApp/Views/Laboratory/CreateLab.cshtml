@model LIMS.Application.Commands.Laboratory.CreateLaboratoryCommand

@{
    ViewData["Title"] = "Add New Laboratory";
}

<h2>@ViewData["Title"]</h2>
<hr />

<!-- Form to Create a New Laboratory -->
<form asp-action="CreateLab" method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Location</label>
        <input type="text" class="form-control" asp-for="Location" required />
    </div>    
    <div class="mb-3">
        <label class="form-label">Contact Number</label>
        <input type="text" class="form-control" asp-for="ContactNumber" required />
    </div>    
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Add Laboratory</button>
    </div>
</form>

<hr />